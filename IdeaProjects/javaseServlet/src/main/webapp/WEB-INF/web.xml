<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>user</param-name>
        <param-value>password</param-value>
    </context-param>
    <servlet>
        <servlet-name>helloservlet</servlet-name>
        <servlet-class>com.example.javaseservlet.HelloServlet</servlet-class>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:mysql:localhost:/user</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>helloservlet2</servlet-name>
        <servlet-class>com.example.javaseservlet.HelloServlet02</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>helloservletcontext</servlet-name>
        <servlet-class>com.example.javaseservlet.ServletContexttest1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>helloservletcontext1</servlet-name>
        <servlet-class>com.example.javaseservlet.ServletContexttest2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helloservlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>helloservlet2</servlet-name>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>helloservletcontext</servlet-name>
        <url-pattern>/hello3</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>helloservletcontext1</servlet-name>
        <url-pattern>/hello4</url-pattern>
    </servlet-mapping>
</web-app>